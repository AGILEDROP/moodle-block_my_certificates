{{!
    @template block_my_certificates/content.mustache

    My Certificates block content template.

    Displays a grid of user certificates with preview, details, and download link.

    Classes required for JS:
    * pdf-canvas - Canvas element for PDF preview rendering

    Data attributes required for JS:
    * data-src - URL of the PDF certificate to preview

    Context variables required for this template:
    * usercertificates - Array of user certificate objects
    * nocertificatestext - HTML content to display when no certificates exist

    Example context (json):
    {
        "usercertificates": [
            {
                "certificate": "Course Completion Certificate",
                "course": "Introduction to Moodle",
                "date": "01.01.2026",
                "previewurl": "https://moodle.site/certificate.pdf"
            }
        ],
        "nocertificatestext": "<p>You have no certificates yet.</p>"
    }
}}

<div class="block-my-certificates-grid {{$classes}}{{/classes}}" data-region="certificates-grid" role="list" style="{{colorstyle}}">
    {{#usercertificates}}
        <div class="certificate-card-wrapper">
            <div class="certificate-card">
                {{#showcertificatepreview}}
                    {{!-- Certificate preview --}}
                    <div class="certificate-preview">
                        <canvas class="pdf-canvas" data-src="{{previewurl}}" aria-label="{{certificate}}"></canvas>
                    </div>
                {{/showcertificatepreview}}

                <div class="certificate-body">
                    <div class="certificate-content">
                        {{#showcertificatename}}
                            {{!-- Certificate name --}}
                            <h3 class="certificate-title">
                                {{certificate}}
                            </h3>
                        {{/showcertificatename}}

                        {{#showcoursename}}
                            {{!-- Certificate details --}}
                            <div class="certificate-details">
                                <div class="certificate-info-item">
                                    <span class="certificate-label">{{#str}} course, block_my_certificates {{/str}}</span>
                                    <span class="certificate-value">{{course}}</span>
                                </div>
                                {{#showcertificatedate}}
                                    <div class="certificate-info-item">
                                        <span class="certificate-label">{{#str}} date, block_my_certificates {{/str}}</span>
                                        <span class="certificate-value">{{date}}</span>
                                    </div>
                                {{/showcertificatedate}}
                            </div>
                        {{/showcoursename}}
                        {{^showcoursename}}
                            {{#showcertificatedate}}
                                <div class="certificate-details">
                                    <div class="certificate-info-item">
                                        <span class="certificate-label">{{#str}} date, block_my_certificates {{/str}}</span>
                                        <span class="certificate-value">{{date}}</span>
                                    </div>
                                </div>
                            {{/showcertificatedate}}
                        {{/showcoursename}}

                        {{#showdownloadbutton}}
                            {{!-- Certificate download link --}}
                            <div class="certificate-actions">
                                <a href="{{previewurl}}" target="_blank" class="certificate-download-link">
                                    {{#pix}}t/download, core{{/pix}}
                                    <span class="certificate-link-label">{{#str}} download, block_my_certificates {{/str}}</span>
                                </a>
                            </div>
                        {{/showdownloadbutton}}
                    </div>
                </div>
            </div>
        </div>
    {{/usercertificates}}
    {{^usercertificates}}
        <div class="no-certificates-message">
            {{{nocertificatestext}}}
        </div>
    {{/usercertificates}}
    {{#hasallcertificates}}
        <div class="all-certificates-card">
            <div class="all-certificates-header">
                <h3 class="all-certificates-title">
                    {{#str}} unlockmore, block_my_certificates {{/str}}
                </h3>
            </div>
            <ul class="all-certificates-list">
                {{#allcertificates}}
                    <li class="all-certificates-item">
                        <a href="{{viewurl}}" class="all-certificates-link">
                            <span class="all-certificates-text">
                                {{#showalllistcertificatename}}
                                    <span class="all-certificates-name">{{name}}</span>
                                {{/showalllistcertificatename}}
                                {{#showalllistcoursename}}
                                    {{#showalllistcertificatename}}
                                        <span class="all-certificates-course">{{course}}</span>
                                    {{/showalllistcertificatename}}
                                    {{^showalllistcertificatename}}
                                        <span class="all-certificates-course all-certificates-course-standalone">
                                            {{course}}
                                        </span>
                                    {{/showalllistcertificatename}}
                                {{/showalllistcoursename}}
                            </span>
                            <span class="all-certificates-chevron" aria-hidden="true"></span>
                        </a>
                    </li>
                {{/allcertificates}}
            </ul>
        </div>
    {{/hasallcertificates}}
</div>
